@model ML.Materia
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Materia</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione una materia para editarlo o + para agregar...</h5>
        <hr />
    </div>

</div>

<div style="float:right;">
    @Html.ActionLink("+", "Form", "Materia", htmlAttributes: new { @class = "btn btn-success" })

</div>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td class="hidden">IdMateria</td>
            <td>Nombre</td>
            <td>Creditos</td>
            <td>Costo</td>
            <td>Semestre</td>
            <td>Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Materia materia in Model.Materias)
        {
        <tr>
            <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Materia", new { IdMateria = materia.IdMateria })"></a></td>
            <td class="hidden">@materia.IdMateria</td>
            <td>@materia.Nombre </td>
            <td>@materia.Creditos</td>
            <td>@materia.Costo</td>
            <td>@materia.Semestre.IdSemestre</td>


            <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdMateria= materia.IdMateria})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
        </tr>
        }

    </tbody>
</table>

